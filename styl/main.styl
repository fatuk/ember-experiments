.constructor
    &__title
        color #E44014
        text-align center
        font-size 45px
        margin-top 10px
        margin-bottom 30px
    &__preview
        clearfix()
        border-top solid 1px #E8E8E8
        border-bottom solid 1px #E8E8E8
        text-align center
        padding-bottom 20px
    &__preview-title
        font-size 28px
        padding-top 35px
        padding-bottom 20px
    &__preview-front
        width 50%
        float left
    &__preview-back
        width 50%
        float right
    &__preview-area
        margin 0 auto
        width 100%
        height 360px
    &__info
        font-size 26px
        text-align center
        border-bottom solid 1px #E8E8E8
        padding-bottom 30px
        margin-bottom 30px
    &__price
        color #E44014

.form
    margin-top 20px
    &__row
        clearfix()
        margin-bottom 22px
    &__cell
        float left
        width (100% / 4)
        padding-right 20px
        &:last-of-type
            padding-right 0

.select
    border solid 1px #7BB3C4
    width 100%

.label
    display inline-block
    color #757575
    margin-bottom 5px